<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activities.Home_Empresa">

    <RelativeLayout
        android:id="@+id/gifContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:elevation="1dp"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/gifView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Cargando_animaciÃ³n"
            android:src="@drawable/animacion" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Cargando..."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeRegistroAdicional"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/gradient_registro_perfil_empresa"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtInformacionAdicional"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_layout_registro"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/txtDescRazonSocial"
                    android:src="@mipmap/razon_social" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/txtRazonSocial"
                    app:boxStrokeWidth="0dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtRazonSocial"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="0dp"
                        android:autofillHints="name"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:maxLength="100"
                        android:paddingLeft="0dp"
                        android:paddingTop="20dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ayudaRazonSocial"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/txtDescAyudaRazonSocial"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ayuda" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_layout_registro"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/txtDescDireccion"
                    android:src="@mipmap/localizacion" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/txtDireccionEmpresa"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDireccionEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:autofillHints="username"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:maxLength="100"
                        android:paddingLeft="0dp"
                        android:paddingTop="20dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ayudaDireccion"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/txtDescAyudaDireccion"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ayuda" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_layout_registro"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/txtDescSectorActividad"
                    android:src="@mipmap/sector_actividad" />

                <Spinner
                    android:id="@+id/spnSectorActividad"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="@string/txtSectorActividad"
                    android:spinnerMode="dropdown"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/ayudaSectorActividad"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/txtDescAyudaSectorActividad"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ayuda" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_layout_registro"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/txtDescNombrePropietario"
                    android:src="@mipmap/propietario" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edtPropietario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/txtNombrePropietario"
                    app:boxStrokeWidth="0dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPropietarioEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLength="100"
                        android:paddingLeft="0dp"
                        android:paddingTop="20dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ayudaNombrePropietario"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/txtDescAyudaNombrePropietario"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ayuda" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_layout_registro"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/txtDescFechaConstitucion"
                    android:src="@mipmap/calendario" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/txtFechaConstitucion"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dtpConstitucion"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:autofillHints="username"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:inputType="date"
                        android:maxLines="1"
                        android:paddingLeft="0dp"
                        android:paddingTop="20dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ayudaFechaConstitucion"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/txtFechaConstitucion"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ayuda" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearFinalizarRegistro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/redondeoimg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/siguiente" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finalizar Registro"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/LinearBase"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_chat_trabajador"
        android:elevation="3dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:elevation="1dp">

            <ImageButton
                android:id="@+id/btnListadoMegustaTrabajador"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/listado_megusta" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/vannerlogo" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgTrabajadorHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/LinearDatosTrabajador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LinearBotonMarch"
            android:background="@drawable/contorno_inicio"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/txtNombreTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre usuario"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtCorreoTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo usuario:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtContactoTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacto usuario:"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearBotonMarch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnCancelar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/txtDescCancelar"
                android:scaleType="fitCenter"
                android:src="@mipmap/cancelar" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnPasar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/txtDescPasar"
                android:scaleType="fitCenter"
                android:src="@mipmap/pasar"
                android:visibility="gone"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnMeGusta"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/txtDescMeGusta"
                android:scaleType="fitCenter"
                android:src="@mipmap/megustahome" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgTrabajador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/txtDescImgTrabajador"
            android:elevation="2dp"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewTrabajador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/LinearBase"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_chat_trabajador"
        android:elevation="3dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/gradient_chat_trabajador_profundidad"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Trabajadores"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:layout_margin="5dp"
                android:background="@drawable/gradient_chat_trabajador_profundidad"
                android:orientation="vertical"
                android:padding="2dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvTrabajadores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewNotificacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/LinearBase"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_notificacion_trabajador"
        android:elevation="3dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/LinearBase"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="NotSibling">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/color_titulo_home_trabajador"
                    android:text="Notificaciones"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="620dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/gradient_notificacion_trabajador_profundidad"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/contorno_inicio"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mensaje"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contorno_inicio"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mensaje"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contorno_inicio"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mensaje"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contorno_inicio"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mensaje"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contorno_inicio"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mensaje"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contorno_inicio"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empresa"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mensaje"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/LinearBase"
        android:layout_alignParentTop="true"
        android:background="@drawable/fondo_perfil_trabajador"
        android:elevation="3dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/LinearImgPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgPerEmpresa"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/descImgPerfil"
                    android:scaleType="centerCrop"
                    android:src="@drawable/usuario"
                    app:shapeAppearanceOverlay="@style/radius" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnCerrarSesion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@android:color/transparent"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/cerrar_sesion_perfil" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <ImageButton
                        android:id="@+id/btnDesactivarCuenta"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@android:color/transparent"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/desactivar_cuenta"
                        android:text="@string/btnDesactivarCuenta" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/LinearCuerpoInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/fondo_perfil_trabajador_profundidad"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtPerNombreEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtNombreEmpresa"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPerRutEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtRutEmpresa"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPerCorreoEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtPerEmailEmpresa"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPerContactoEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtPerFonoEmpresa"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPerUbicacionEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion Empresa"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <Button
                    android:id="@+id/btnCrearEmpleo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8BC34A"
                    android:text="Crear Empleo" />

                <Button
                    android:id="@+id/btnVerEmpleo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8BC34A"
                    android:text="ver Empleo"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RelativeListadoExperiencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="1dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvEmpleosCreados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearBase"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradiento_linear_base"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/contorno_btn_barranavegacion"
            android:contentDescription="@string/txtDescHome"
            android:scaleType="fitCenter"
            android:src="@mipmap/home" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnTrabajadores"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/contorno_btn_barranavegacion"
            android:contentDescription="@string/txtDescListarTrabajo"
            android:scaleType="fitCenter"
            android:src="@mipmap/listar_trabajadores" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnNotificacion"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/contorno_btn_barranavegacion"
            android:contentDescription="@string/txtDescNotificaciones"
            android:scaleType="fitCenter"
            android:src="@mipmap/notificacion" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/contorno_btn_barranavegacion"
            android:contentDescription="@string/txtDescPerfil"
            android:scaleType="fitCenter"
            android:src="@mipmap/perfil" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>