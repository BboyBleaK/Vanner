<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/flechaatras" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Actualizar Info de la Empresa"
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtForIdFiscalEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Identificador Fiscal"
            android:inputType="text"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/edtForRutEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rut empresa"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtForNombreEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la empresa"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtForCorreoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Empresa"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtForTelefonoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fono empresa"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edtForEdadUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad Usuario"
            android:inputType="number" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dtmForNacimientoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Fecha de Nacimiento" />

        <Button
            android:id="@+id/btnActualizarDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="Actualizar Datos"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>
