<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/flechaatras" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Modificar de empleo"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgEditarEmpleo"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/registro_empresa" />

                <ImageButton
                    android:id="@+id/btnCambiarImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/editar" />
            </RelativeLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4CAF50"
            android:hint="Título del empleo"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4CAF50"
            android:gravity="top"
            android:hint="Descripción del empleo"
            android:inputType="text"
            android:minLines="1"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4CAF50"
            android:hint="Sueldo ($)"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etVacancies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4CAF50"
            android:hint="Vacantes"
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etExpirationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4CAF50"
            android:focusable="false"
            android:hint="Fecha de Vencimiento (dd/mm/yyyy)"
            android:inputType="date"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Modalidad de empleo"
            android:textColor="#4CAF50"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/etEmploymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/radioFullTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Full-time"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/radioPartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Part-time"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/radioHoras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por Horas"
                android:textColor="#333333" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4CAF50"
            android:padding="12dp"
            android:text="Guardar Cambios"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
