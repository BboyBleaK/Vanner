<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD7A7A"
    tools:context=".RegistroActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_registro"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/linearEncabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnVolver"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btnRegresar"
                android:scaleType="fitCenter"
                android:src="@mipmap/regresar"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/txtTitulo"
                android:textSize="48sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearImgUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearEncabezado"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/redondeoimg"
                android:gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imgUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/txtDescRut"
                    android:scaleType="fitXY"
                    android:src="@drawable/usuario" />

                <ImageButton
                    android:id="@+id/btnCambioimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:scaleType="fitCenter"
                    android:src="@drawable/modificarimg" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearImgUsuario"
            android:layout_margin="5dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/txtInfo"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearInfo"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescRut"
                android:src="@mipmap/rut" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtRut"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtRut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLength="11"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearRut"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescNombre"
                android:src="@mipmap/nombre" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtNombre"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:maxLength="70"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPaterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearNombre"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescPaterno"
                android:src="@mipmap/nombre" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtPaterno"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPaterno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLength="70"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMaterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearPaterno"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescMaterno"
                android:src="@mipmap/nombre" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtMaterno"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMaterno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLength="50"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearMaterno"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescNacimiento"
                android:src="@mipmap/calendario" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtNacimiento"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dtpNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:inputType="date"
                    android:maxLines="1"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearNacimiento"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescDireccion"
                android:src="@mipmap/localizacion" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtDireccion"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLength="100"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearDireccion"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescFono"
                android:src="@mipmap/fono" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtFono"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtFono"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:maxLength="13"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearFono"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescCorreo"
                android:src="@mipmap/email" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtCorreo"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="textEmailAddress"
                    android:maxLength="70"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearCorreo"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescPass"
                android:src="@mipmap/cargo" />

            <Spinner
                android:id="@+id/SpinnerCargo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/txtGenero"
                android:spinnerMode="dropdown"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearCargo"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescPass"
                android:src="@mipmap/genero" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtGenero"
                app:boxStrokeWidth="0dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <Spinner
                    android:id="@+id/SpinnerGenero"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/txtGenero"
                    android:spinnerMode="dropdown"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearGenero"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescPass"
                android:src="@mipmap/pass" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtPass"
                app:boxStrokeWidth="0dp"
                app:endIconMode="password_toggle"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearPass"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="@string/txtDescPass"
                android:src="@mipmap/pass" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/txtRePass"
                app:boxStrokeWidth="0dp"
                app:endIconMode="password_toggle"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtRePass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:autofillHints="username"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:paddingLeft="0dp"
                    android:paddingTop="20dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linearBtnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearRePass"
            android:layout_margin="5dp"
            android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearRePass"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext_layout_registro"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btnRegresar"
                android:scaleType="fitCenter"
                android:src="@mipmap/registrar"
                android:text="@string/imgBtnRegistrar"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout></ScrollView>
