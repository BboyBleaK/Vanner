<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD7A7A"
    tools:context=".RegistroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_registro"
        android:elevation="1dp">

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btnRegresar"
            android:scaleType="fitCenter"
            android:src="@mipmap/regresar"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/RelativeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:text="@string/txtTituloUsuario"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/LinearIrAEmpresa"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/btnRegresar"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/registro_empresa"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txtTituloIrAEmpresa"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/linearImgUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:background="@drawable/redondeoimg"
                        android:gravity="center"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/imgUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/txtDescRut"
                            android:scaleType="fitXY"
                            android:src="@drawable/usuario" />

                        <ImageButton
                            android:id="@+id/btnCambioimg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_margin="5dp"
                            android:background="@drawable/edittext_layout_registro"
                            android:scaleType="fitCenter"
                            android:src="@drawable/modificarimg" />
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:text="@string/txtInfo"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearRut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescRut"
                        android:src="@mipmap/rut" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtRut"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtRut"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescNombre"
                        android:src="@mipmap/nombre" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtNombre"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtNombre"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescCorreo"
                        android:src="@mipmap/edad" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtEdad"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtEdad"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:background="@android:color/transparent"
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescCorreo"
                        android:src="@mipmap/gmail" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtCorreo"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="textEmailAddress"
                            android:maxLength="70"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescPass"
                        android:src="@mipmap/pass" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtPass"
                        app:boxStrokeWidth="0dp"
                        app:endIconMode="password_toggle"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearRePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescPass"
                        android:src="@mipmap/pass" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtRePass"
                        app:boxStrokeWidth="0dp"
                        app:endIconMode="password_toggle"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtRePass"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBtnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/LinearRegistrarUsuario"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_layout_registro"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/btnRegresar"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/registrar"
                            android:text="@string/imgBtnRegistrar"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:text="@string/txtTituloEmpresa"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/linearRegresarAusuario"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/btnRegresar"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/registro_empresa"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txtTituloIrAUsuario"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:background="@drawable/redondeoimg"
                        android:gravity="center"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/imgEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/txtDescImgEmpresa"
                            android:scaleType="fitXY"
                            android:src="@drawable/usuario" />

                        <ImageButton
                            android:id="@+id/btnCambioimgEmpresa"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_margin="5dp"
                            android:background="@drawable/edittext_layout_registro"
                            android:scaleType="fitCenter"
                            android:src="@drawable/modificarimg" />
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:text="@string/txtInfo"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescNif"
                        android:src="@mipmap/rut" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtIdentificadorFiscal"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtIdentificadorFiscal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDesRutEmpresa"
                        android:src="@mipmap/nombre" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtRutEmpresa"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtRutEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:maxLength="70"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDesNombreEmpresa"
                        android:src="@mipmap/nombre" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtNombreEmpresa"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtNombreEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLength="70"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="10dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDesCorreoEmpresa"
                        android:src="@mipmap/correo" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtCorreoEmpresa"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCorreoEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDesNumeroContactoEmpresa"
                        android:src="@mipmap/fono" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtContactoEmpresa"
                        app:boxStrokeWidth="0dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dtpContactoEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"

                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:inputType="date"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
