                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescPass"
                        android:src="@mipmap/pass" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtPassEmpresa"
                        app:boxStrokeWidth="0dp"
                        app:endIconMode="password_toggle"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPassEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_layout_registro"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/txtDescPass"
                        android:src="@mipmap/pass" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/txtRePassEmpresa"
                        app:boxStrokeWidth="0dp"
                        app:endIconMode="password_toggle"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtRePassEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="0dp"
                            android:autofillHints="username"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingLeft="0dp"
                            android:paddingTop="20dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/LinearRegistrarEmpresa"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_layout_registro"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/btnRegresar"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/registrar"
                            android:text="@string/imgBtnRegistrar"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
