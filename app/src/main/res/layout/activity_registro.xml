<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD7A7A"
    tools:context=".RegistroActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearEncabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonVolver"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/btnRegresar"
                android:src="@mipmap/flecha_regresar"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/txtTitulo"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearEncabezado"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescRut"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtRut"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtRut"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearRut"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescNombre"
                android:src="@mipmap/social" />

            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtNombre"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPaterno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearNombre"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescPaterno"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtPaterno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtPaterno"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMaterno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearPaterno"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescMaterno"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtMaterno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtMaterno"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNacimiento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearMaterno"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescNacimiento"
                android:src="@mipmap/calendario" />

            <EditText
                android:id="@+id/dtpNacimiento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/txtNacimiento"
                android:inputType="date"

                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDireccion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearNacimiento"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescDireccion"
                android:src="@mipmap/localizacion" />

            <EditText
                android:id="@+id/edtDireccion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtDireccion"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearDireccion"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescFono"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtFono"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtFono"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCorreo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearFono"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescCorreo"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtCorreo"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCargo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearCorreo"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescCargo"
                android:src="@mipmap/flecha_regresar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtCargo" />

            <RadioGroup
                android:id="@+id/rgTipoCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbTecnico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtTecnico" />

                <RadioButton
                    android:id="@+id/rbEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtEmpresa" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearCargo"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescPass"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtUsuario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtPass"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRePass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearPass"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/txtDescPass"
                android:src="@mipmap/flecha_regresar" />

            <EditText
                android:id="@+id/edtRePass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="username"
                android:background="@drawable/radius_button"
                android:hint="@string/txtRePass"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearRePass"
            android:text="@string/btnRegistrar" />


    </RelativeLayout>
</ScrollView>
